{
    "manifest_version": 3,
    "name": "PeaClock",
    "version": "1.0",
    "description": "View multiple clocks set to different time zones.",
    
    "action": {
      "default_popup": "index.html",
      "default_icon": "icon.png"
    },
    "permissions": ["storage"],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  