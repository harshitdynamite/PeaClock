{
    "manifest_version": 3,
    "name": "PeaClock",
    "version": "1.0",
    "description": "View multiple clocks set to different time zones.",
    
    "action": {
      "default_popup": "index.html",
      "default_icon": {
      "16": "peaclock_16x16.png",
      "32": "peaclock_32x32.png",
      "48": "peaclock_48x48.png",
      "128": "peaclock_128x128.png"
    }
    },
    "permissions": ["storage"],
    "icons": {
      "16": "peaclock_16x16.png",
      "32": "peaclock_32x32.png",
      "48": "peaclock_48x48.png",
      "128": "peaclock_128x128.png"
    }
  }
  